<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/move_menu_title"
        android:textSize="60sp"
        android:layout_gravity="center">
    </TextView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:textSize="60sp"
            android:text="@string/move_menu_item1"
            android:id="@+id/btn_moveintoout"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:textSize="60sp"
            android:text="@string/move_menu_item2"
            android:id="@+id/btn_copyintoout"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:textSize="60sp"
            android:text="@string/move_menu_item3"
            android:id="@+id/btn_moveouttoin"
            android:layout_row="1"
            android:layout_column="0"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:textSize="60sp"
            android:text="@string/move_menu_item4"
            android:id="@+id/btn_copyouttoin"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:textSize="60sp"
            android:text="@string/move_menu_item5"
            android:id="@+id/btn_deletein"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:textSize="60sp"
            android:text="@string/move_menu_item6"
            android:id="@+id/btn_learndata"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>

</LinearLayout>