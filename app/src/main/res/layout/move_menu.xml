<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="資料轉移"
        android:textSize="60dp"
        android:layout_gravity="center"
        android:textColor="@color/MainText"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:layout_gravity="center"
        android:background="@drawable/line"
        android:textColor="@color/MainText"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/button"
            android:textSize="60dp"
            android:textColor="@color/MainText"
            android:text="搬動IN"
            android:id="@+id/btn_moveintoout" />
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/button"
            android:textSize="60dp"
            android:textColor="@color/MainText"
            android:text="複製IN"
            android:id="@+id/btn_copyintoout" />
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/button"
            android:textSize="60dp"
            android:textColor="@color/MainText"
            android:text="搬動EX"
            android:id="@+id/btn_moveouttoin" />
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/button"
            android:textSize="60dp"
            android:textColor="@color/MainText"
            android:text="複製EX"
            android:id="@+id/btn_copyouttoin" />
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/button"
            android:textSize="60dp"
            android:textColor="@color/MainText"
            android:text="刪除IN"
            android:id="@+id/btn_deletein" />
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/button"
            android:textSize="60dp"
            android:textColor="@color/MainText"
            android:text="學習"
            android:id="@+id/btn_learndata" />
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
    </LinearLayout>
</LinearLayout>