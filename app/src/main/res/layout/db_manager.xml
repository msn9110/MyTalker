<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/MainBackground"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="資料管理"
                android:textSize="60dp"
                android:layout_gravity="center"
                android:textColor="@color/MainText"></TextView>
            <TextView android:id="@+id/Text_db1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Voc:" android:textSize="45dp" android:textColor="@color/MainText"></TextView>
            <Spinner android:id="@+id/Spinner01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/MainText"></Spinner>
            <TableLayout android:id="@+id/TableLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:stretchColumns="1" android:gravity="center">
                <TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_ID" android:textColor="@color/MainText"></TextView>
                    <EditText android:id="@+id/EditText01" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
                    <TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_content" android:textColor="@color/MainText"></TextView>
                    <EditText android:id="@+id/EditText02" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
                    <TableRow android:id="@+id/TableRow03" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_count" android:textColor="@color/MainText"></TextView>
                    <EditText android:id="@+id/EditText03" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
            </TableLayout>
            <LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <Button
                    android:id="@+id/Button01"
                    android:text="@string/app_add"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button02"
                    android:text="@string/app_update"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button03"
                    android:text="@string/app_delete"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button04"
                    android:text="@string/app_clear"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

            </LinearLayout>

            <TextView android:id="@+id/Text_db_" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
            <TextView android:id="@+id/Text_db2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Relation:" android:textSize="45dp" android:textColor="@color/MainText"></TextView>
            <Spinner android:id="@+id/Spinner11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/MainText"></Spinner>
