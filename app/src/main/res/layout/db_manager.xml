                    <TextView android:textColor="@color/MainText" android:id="@+id/TextView11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_ID"></TextView>
                    <EditText android:id="@+id/EditText11" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
                <TableRow android:id="@+id/TableRow12" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/MainText" android:id="@+id/TextView12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_ID1"></TextView>
                    <EditText android:id="@+id/EditText12" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
                <TableRow android:id="@+id/TableRow13" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/MainText" android:id="@+id/TextView13" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_ID2"></TextView>
                    <EditText android:id="@+id/EditText13" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
                <TableRow android:id="@+id/TableRow14" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/MainText" android:id="@+id/TextView14" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_count"></TextView>
                    <EditText android:id="@+id/EditText14" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
            </TableLayout>

            <LinearLayout android:id="@+id/LinearLayout11" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <Button
                    android:id="@+id/Button11"
                    android:text="@string/app_add"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button12"
                    android:text="@string/app_update"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button13"
                    android:text="@string/app_delete"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button14"
                    android:text="@string/app_clear"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>
            </LinearLayout>

            <TextView android:id="@+id/Text_db__" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
            <TextView android:textColor="@color/MainText" android:id="@+id/Text_db3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sentence:" android:textSize="45dp"></TextView>
            <Spinner android:textColor="@color/MainText" android:id="@+id/Spinner21" android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
            <TableLayout android:id="@+id/TableLayout21" android:layout_width="wrap_content" android:layout_height="wrap_content" android:stretchColumns="1" android:gravity="center">
                <TableRow android:id="@+id/TableRow21" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/MainText" android:id="@+id/TextView21" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_ID"></TextView>
                    <EditText android:id="@+id/EditText21" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
                <TableRow android:id="@+id/TableRow22" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/MainText" android:id="@+id/TextView22" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_content"></TextView>
                    <EditText android:id="@+id/EditText22" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
                <TableRow android:id="@+id/TableRow23" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/MainText" android:id="@+id/TextView23" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_count"></TextView>
                    <EditText android:id="@+id/EditText23" android:layout_width="wrap_content" android:layout_height="wrap_content"></EditText>
                </TableRow>
            </TableLayout>

            <LinearLayout android:id="@+id/LinearLayout21" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <Button
                    android:id="@+id/Button21"
                    android:text="@string/app_add"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button22"
                    android:text="@string/app_update"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button23"
                    android:text="@string/app_delete"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>

                <Button
                    android:id="@+id/Button24"
                    android:text="@string/app_clear"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:textSize="45dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
