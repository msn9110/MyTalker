<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="計畫執行選單"
        android:textSize="60dp"
        android:layout_gravity="center"
        android:textColor="@color/MainText"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:layout_gravity="center"
        android:background="@drawable/line"
        android:textColor="@color/MainText"></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text=""
                android:id="@+id/btn_mode1"
                android:background="@drawable/com"
                android:layout_gravity="center"
                android:layout_weight="2" />
            <TextView android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="連線模式"
                android:textSize="45dp"
                android:textColor="@color/MainText">
            </TextView>
        </LinearLayout>
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text=""
                android:layout_gravity="center"
                android:id="@+id/btn_mode2"
                android:background="@drawable/say"
                android:layout_weight="2"/>
            <TextView android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="交談模式"
                android:textSize="45dp"
                android:textColor="@color/MainText">
            </TextView>
        </LinearLayout>
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text=""
                android:id="@+id/btn_mode3"
                android:layout_weight="2"
                android:background="@drawable/db_lib"
                android:layout_gravity="center" />
            <TextView android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="資料管理"
                android:textSize="45dp"
                android:textColor="@color/MainText">
            </TextView>
        </LinearLayout>
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text=""
                android:id="@+id/btn_mode4"
                android:layout_weight="2"
                android:background="@drawable/fmove"
                android:layout_gravity="center"/>
            <TextView android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="資料移轉"
                android:textSize="45dp"
                android:textColor="@color/MainText">
            </TextView>
        </LinearLayout>
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text=""
                android:id="@+id/btn_mode5"
                android:layout_weight="2"
                android:background="@drawable/speech"
                android:layout_gravity="center" />
            <TextView android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="演講模式"
                android:textSize="45dp"
                android:textColor="@color/MainText">
            </TextView>
        </LinearLayout>
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:text=""
                android:id="@+id/btn_mode6"
                android:layout_weight="2"
                android:background="@drawable/manual"
                android:layout_gravity="center"/>
            <TextView android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="操作說明"
                android:textSize="45dp"
                android:textColor="@color/MainText">
            </TextView>
        </LinearLayout>
        <TextView android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textSize="45dp"></TextView>
    </LinearLayout>
</LinearLayout>